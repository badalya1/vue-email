{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "jsx": "preserve",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "strict": true,
    "allowJs": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "types": [
      "node",
      "csstype",
      "vitest",
      "vitest/globals",
    ],
    "baseUrl": ".",
  },
  "include": [
    "./env.d.ts",
    "docs/**/*",
    "docs/**/*",
    "packages/**/*"
  ],
  "exclude": [
    "../dist",
    "../.output"
  ]
}
